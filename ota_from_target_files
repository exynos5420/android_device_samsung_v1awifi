import sys

if sys.hexversion < 0x02040000:
  print >> sys.stderr, "Python 2.4 or newer is required."
  sys.exit(1)

import imp
import os

RELEASETOOLS = os.path.realpath(os.path.join(os.path.dirname(__file__), "..", "..", "..", "..", "build", "tools", "releasetools"))
sys.path.append(RELEASETOOLS)

imp.load_source("ota", os.path.join(RELEASETOOLS, "ota_from_target_files"))
import ota
ota.OPTIONS.seandroid = os.path.realpath(os.path.join(os.path.dirname(__file__), 'seandroid'))

if __name__ == '__main__':
  try:
    ota.main(sys.argv[1:])
  except common.ExternalError, e:
    print
    print "   ERROR: %s" % (e,)
    print
    sys.exit(1)